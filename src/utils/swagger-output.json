    "/api/employees": {
      "post": {
        "description": "Создание нового сотрудника",
        "parameters": [
          {
            "name": "first_name",
            "in": "body",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "last_name",
            "in": "body",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "branch_id",
            "in": "body",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Сотрудник успешно создан"
          },
          "500": {
            "description": "Ошибка сервера"
          }
        }
      },
      "get": {
        "description": "Вывод всех сотрудников из базы данных",
        "responses": {
          "200": {
            "description": "Успешный вывод массива данных"
          },
          "500": {
            "description": "Ошибка сервера"
          }
        }
      }
    },
    "/api/employees/{employee_id}": {
      "get": {
        "description": "Поиск сотрудника по его ID",
        "parameters": [
          {
            "name": "employee_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Успешный вывод"
          },
          "404": {
            "description": "Сотрудник не найден"
          },
          "500": {
            "description": "Ошибка сервера"
          }
        }
      },
      "put": {
        "description": "Обновление учетных данных пользователя",
