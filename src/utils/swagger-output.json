            }
          },
          {
            "name": "branch_id",
            "in": "body",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Сотрудник обновлен"
          },
          "404": {
            "description": "Сотрудник с таким ID не найден"
          },
          "500": {
            "description": "Ошибка сервера"
          }
        }
      },
      "delete": {
        "description": "Удаление сотрудника",
        "parameters": [
          {
            "name": "employee_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Сотрудник удален"
          },
          "404": {
            "description": "Сотрудник с таким ID не найден"
          },
          "500": {
            "description": "Ошибка сервера"
          }
        }
      }
    },
